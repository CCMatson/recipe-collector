<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
<h1>Edit the Recipe <%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>
  
  <section>
    <h1>Edit the recipe 👩‍💻</h1>
    <form id="new-form" action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
      <label>
        Name:
        <input 
          type="text" 
          name="name"
          value="<%= recipe.name %>"
          autocomplete="off"
        >
      </label>
      <label>
        Ingredients:
        <input 
        type="text"
        name="ingredients"
        value="<%= recipe.ingredients %>"
        autocomplete="off"
        >
      </label>
      <label>
        Instructions:
        <input 
        type="text"
        name="instructions"
        value="<%= recipe.instructions %>"
        autocomplete="off"
        >
      </label>
      <button type="submit">Save your changes</button>
    </form>


</section>

<%- include('../partials/footer') %>