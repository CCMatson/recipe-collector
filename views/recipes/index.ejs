<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css" />
<%- include('../partials/nav') %>

<body>
<section>
  <div class="btn-list">
  <div class="headlines">
    <h1>Here are all the recipes</h1>
  </div>

  <div class="add-btn">
    <a class="add-new"
    href="/recipes/new" >
    Add a new recipe
    </a>
  </div>
  
  <div class="recipe-list-box">
	<ul>
  <% recipes.forEach(recipe => { %>
    <li >
      <a class="recipe-list" href="/recipes/<%= recipe._id %>"><%= recipe.name %></a>
      <% }) %></a>
    </li>
  </ul>
</div>



  <form action="/ingredients/search" method="POST">
    <input type="text" name="ingredients" placeholder="ingredients">
    <button type="submit">Search</button>
  </form>




</section>
</body>
<%- include('../partials/footer') %>